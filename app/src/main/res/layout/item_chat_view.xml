<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <co.intentservice.chatui.ChatView
        android:id="@+id/roster_chat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sendBtnBackgroundTint="@color/blue"
        app:bubbleBackgroundSend="@color/white"
        app:messageTextColorSend="@color/black"
        app:tStampTextColorSend="@color/bg_dark_grey_shade"
        app:bubbleBackgroundRcv="@color/blue"
        app:messageTextColorRcv="@color/white"
        app:tStampTextColorRcv="@color/bg_dark_grey_shade"
        app:messageTextSize="14sp"/>

</RelativeLayout>